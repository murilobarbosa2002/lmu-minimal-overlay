{
  "version": "1.0.0",
  "update_interval_ms": 16,
  
  "window": {
    "title": "LMU Telemetry Overlay",
    "default_width": 1920,
    "default_height": 1080
  },
  
  "theme": {
    "dashboard_card": {
      "bg_color": [5, 15, 45, 120],
      "bg_color_dragging": [10, 20, 50, 100],
      "text_color": [255, 255, 255],
      "gear_color": [255, 200, 0],
      "rpm_color": [200, 200, 200],
      "rpm_font_size": 24,
      "border_radius": 24,
      "border_color": [255, 255, 255, 100],
      "border_glow_color": [200, 220, 255, 20],
      "border_glow_width": 2,
      "lateral_padding": 20,
      "gradient_top_multiplier": 1.15,
      "gradient_bottom_multiplier": 0.6,
      "default_alpha": 120,
      "noise_intensity": 0.015,
      "inner_shadow_intensity": 20,
      "inner_shadow_size": 1,
      "speed_gear_left_margin": 10,
      "speed_gear_horizontal_margin": 20,
      "bars_height": 90,
      "width": 350,
      "height": 130
    },
    
    "steering_indicator": {
      "radius": 60,
      "color_rim": [30, 30, 30],
      "color_marker": [255, 200, 0],
      "color_center": [50, 50, 50],
      "tick_start": 30,
      "tick_end": 150,
      "tick_step": 10,
      "angle_tolerance": 0.5
    },
    
    "bar": {
      "width": 18,
      "height": 70,
      "bg_color": [40, 40, 40],
      "border_radius": 3,
      "centerline_color": [100, 100, 100],
      "padding": 5,
      "font_size_value": 16,
      "font_size_label": 14
    },
    
    "indicator_bars": {
      "spacing": 12,
      "throttle_color": [0, 255, 0],
      "brake_color": [255, 0, 0],
      "ffb_color": [255, 165, 0]
    },
    
    "edit_mode": {
      "selection_color": [30, 144, 255],
      "selection_border_width": 2,
      "selection_border_radius": 8,
      "padding_min": 8,
      "padding_max": 12
    }
  },
  
  "defaults": {
    "telemetry": {
      "speed": 0.0,
      "rpm": 0,
      "max_rpm": 8000,
      "gear": 0,
      "throttle_pct": 0.0,
      "brake_pct": 0.0,
      "clutch_pct": 0.0,
      "steering_angle": 0.0,
      "ffb_level": 0.0,
      "unit": "km/h"
    }
  },
  
  "colors": {
    "ffb_normal": [0, 255, 0],
    "ffb_warning": [255, 255, 0],
    "ffb_clipping": [255, 0, 0]
  },
  
  "thresholds": {
    "ffb_warning": 0.8,
    "ffb_clipping": 0.95
  },
  
  "performance": {
    "fps_target": 60
  },
  "physics": {
    "gear_ratios": {
      "-1": -3.5,
      "0": 0.0,
      "1": 3.08,
      "2": 2.19,
      "3": 1.71,
      "4": 1.39,
      "5": 1.16,
      "6": 1.00
    },
    "final_drive": 3.5,
    "wheel_circumference": 1.9,
    "idle_rpm": 1500,
    "max_rpm": 8000,
    "redline_rpm": 7800,
    "upshift_rpm": 7410,
    "downshift_rpm": 3120,
    "simulation": {
      "initial_gear": 1,
      "max_gear": 6,
      "min_gear": 1,
      "rpm_noise_range": 25
    },
    "driver_ai": {
      "corner_entry": {
        "brake_sensitivity": 50.0,
        "steering_entry_factor": 0.3
      },
      "corner_mid": {
        "throttle_application_point": 0.7,
        "partial_throttle": 0.2,
        "trail_brake_intensity": 0.4,
        "brake_decay_rate": 1.5
      },
      "corner_exit": {
        "min_throttle": 0.2,
        "max_throttle": 1.0
      }
    },
    "input_response": {
      "throttle_speed": 3.0,
      "brake_speed": 5.0,
      "steering_speed": 2.0
    },
    "steering_dynamics": {
      "jitter_speed_threshold": 40.0,
      "jitter_angle_threshold": 0.1,
      "jitter_intensity": 0.002,
      "jitter_speed_factor": 100.0,
      "max_steer_rate": 2.5,
      "smoothing_factor": 5.0
    },
    "vehicle_dynamics": {
      "aero_drag_coefficient": 0.005,
      "torque_rpm_min": 3000,
      "torque_rpm_max": 7000,
      "torque_peak": 1.0,
      "torque_off_peak": 0.7,
      "gear_ratio_divisor": 0.5,
      "acceleration_factor": 20.0,
      "deceleration_factor": 45.0
    }
  },
  "ui": {
    "window": {
      "default_width": 800,
      "default_height": 600,
      "default_fps": 60
    },
    "transparency": {
      "chroma_key_color": [255, 0, 128],
      "alpha": 217
    }
  },
  "validation": {
    "byte_max": 255,
    "word_max": 65535,
    "normalized_min": 0.0,
    "normalized_max": 1.0,
    "percentage_min": 0.0,
    "percentage_max": 1.0,
    "steering_angle_min": -900.0,
    "steering_angle_max": 900.0
  },
  "conversion": {
    "kmh_to_ms": 3.6,
    "km_to_miles": 0.621371,
    "seconds_to_minutes": 60,
    "steering_degrees_full_lock": 540.0,
    "lateral_g_speed_divisor": 100.0
  },
  "input": {
    "mouse_button_left": 1,
    "mouse_button_middle": 2,
    "mouse_button_right": 3
  },
  "animation": {
    "edit_mode_time_step": 0.05
  }
}
